{
  "version": "1.0",
  "title": "H-Cards",
  "description": "A simple way to add H-Card support to your site.",
  "includes": ["hcard.css"],
  "fields": [
    {
      "field": "params.hcarddisplayhome",
      "label": "Display on home page?",
      "placeholder": "Display the H-CARD on your home page?",
      "type": "boolean"
    },
    {
      "field": "params.hcarddisplaypost",
      "label": "Display on each post?",
      "placeholder": "Display the H-CARD on each of your posts?",
      "type": "boolean"
    },
    {
      "field": "params.hcardnamefull",
      "label": "Full Name",
      "placeholder": "Your Full Name."
    },
    {
      "field": "params.hcardnamegiven",
      "label": "Given Name",
      "placeholder": "Your Given Name."
    },
    {
      "field": "params.hcardnameadditional",
      "label": "Additional Name",
      "placeholder": "Your Additional Name."
    },
    {
      "field": "params.hcardnamefamily",
      "label": "Family Name",
      "placeholder": "Your family name."
    },
    {
      "field": "params.hcardphotourl",
      "label": "Photo",
      "placeholder": "The URL to your profile photo."
    },
    {
      "field": "params.hcardwebsiteurl",
      "label": "Website",
      "placeholder": "The URL to your website."
    },
    {
      "field": "params.hcardbio",
      "label": "BIO",
      "placeholder": "A brief bio of yourself or your site."
    }
  ]
}
